    <PackageReference Include="Amazon.CDK.AWS.EC2" Version="1.165.0" />
    <PackageReference Include="Amazon.CDK.AWS.ECS" Version="1.165.0" />
    <PackageReference Include="Amazon.CDK.AWS.Events" Version="1.165.0" />
    <PackageReference Include="Amazon.CDK.AWS.Events.Targets" Version="1.165.0" />
    <PackageReference Include="Amazon.CDK.AWS.GameLift" Version="1.165.0" />
